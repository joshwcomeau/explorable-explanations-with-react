class ReactRallyWaveform extends Component {
  state = {
    frequency: 1,
    amplitude: 1,
    stopwatchRunning: false,
  };

  toggleRunning = () => {
    this.setState(state => ({
      stopwatchRunning: !state.stopwatchRunning,
    }));
  };

  render() {
    const { width, height, stopwatchRunning } = this.props;
    const { frequency, amplitude } = this.state;

    return (
      <Fragment>
        <WaveformStopwatch frequency={frequency} isRunning={stopwatchRunning}>
          {progress => (
            <WaveformCalculator
              shape="sine"
              frequency={frequency}
              amplitude={amplitude}
              width={width}
              height={height}
            >
              {points => (
                <Waveform width={width} height={height} points={points} />
              )}
            </WaveformCalculator>
          )}
        </WaveformStopwatch>
        <WaveformAxis axis="x" width={width} height={height} />
        <WaveformAxis axis="y" width={width} height={height} />
      </Fragment>
    );
  }
}

export default ReactRallyWaveform;
